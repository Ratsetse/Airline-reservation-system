<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.controllers.LoginController"
            prefWidth="400" prefHeight="300"
            styleClass="login-pane">

    <VBox alignment="CENTER" spacing="15" layoutX="50" layoutY="60" prefWidth="300">
        <Label text="LEC Billing System" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <TextField fx:id="txtUsername" promptText="Username" />
        <PasswordField fx:id="txtPassword" promptText="Password" />
        <Button text="Login" fx:id="btnLogin" onAction="#handleLogin" />
        <Button text="Create New Account" onAction="#handleGoToRegister" />
        <Label fx:id="lblMessage" textFill="red" />
    </VBox>
</AnchorPane>
