<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.controllers.RegisterController"
            prefWidth="400" prefHeight="300"
            styleClass="login-pane">

    <VBox alignment="CENTER" spacing="15" layoutX="50" layoutY="60" prefWidth="300">
        <Label text="Register New Account" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <TextField fx:id="txtUsername" promptText="Enter username" />
        <PasswordField fx:id="txtPassword" promptText="Enter password" />
        <Button text="Register" fx:id="btnRegister" onAction="#handleRegister" />
        <Button text="Back to Login" onAction="#handleBackToLogin" />
        <Label fx:id="lblMessage" textFill="red" />
    </VBox>
</AnchorPane>
